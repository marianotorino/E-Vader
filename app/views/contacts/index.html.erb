<p id="notice"><%= notice %></p>

<h1>Medios de contacto de <%= @client.surname %></h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.kind %></td>
        <td><%= contact.data %></td>
        <td><%= link_to 'Ver', client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Editar', edit_client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Eliminar', client_contact_path(@client, contact), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Contacto', new_client_contact_path(@client) %> | 
<%= link_to 'Volver', client_path(@client) %>

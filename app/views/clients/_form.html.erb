<%= form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br>
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label :dni %><br>
    <%= f.number_field :dni %>
  </div>
  <div class="field">
    <%= f.label :genero %><br>
    <%= radio_button_tag("client[gender]", "M") %>
    <%= label_tag(:male, "M") %>
    <%= radio_button_tag("client[gender]", "F") %>
    <%= label_tag(:female, "F") %>
  </div>
  <div class="field">
    <%= f.label :fecha_de_nacimiento %><br>
    <%= f.date_select(:birthdate, { start_year: 1930, end_year: Date.today.year }) %>
  </div>
  <div class="field">
    <%= f.label "CUIL/CUIT" %><br>
    <%= f.text_field :cuit %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listado de facturas de <%= @client.surname %></h1>

<table>
  <thead>
    <tr>
      <th>Monto</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.amount %></td>
        <td><%= bill.description %></td>
        <td><%= bill.date %></td>
        <td><%= link_to 'Ver', client_bill_path(@client, bill) %></td>
        <td><%= link_to 'Editar', edit_client_bill_path(@client, bill) %></td>
        <td><%= link_to 'Eliminar', client_bill_path(@client, bill), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Factura', new_client_bill_path(@client) %> | 
<%= link_to 'Volver', client_path(@client) %>
